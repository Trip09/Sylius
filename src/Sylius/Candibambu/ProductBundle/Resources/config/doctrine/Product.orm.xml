<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <entity name="Sylius\Candibambu\ProductBundle\Entity\Product" table="candibambu_product">
        <attribute-overrides>
            <attribute-override name="name">
                <field column="name" type="string" nullable="true" />
            </attribute-override>
            <attribute-override name="slug">
                <field column="slug" type="string" nullable="true" >
                </field>
            </attribute-override>
            <attribute-override name="description">
                <field column="description" type="text" nullable="true" />
            </attribute-override>
            <attribute-override name="shortDescription">
                <field column="short_description" type="string" nullable="true" />
            </attribute-override>
        </attribute-overrides>
    </entity>
</doctrine-mapping>
